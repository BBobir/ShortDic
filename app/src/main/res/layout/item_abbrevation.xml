<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <TextView
        android:id="@+id/starter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:background="@drawable/bg_search"
        android:gravity="center"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sh" />

    <TextView

        android:id="@+id/txt_short_word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@id/txt_desc"
        app:layout_constraintEnd_toStartOf="@+id/img_fovarite"
        app:layout_constraintStart_toEndOf="@id/starter"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Short Word" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_semibold"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/img_fovarite"
        app:layout_constraintStart_toStartOf="@id/txt_short_word"
        app:layout_constraintTop_toBottomOf="@+id/txt_short_word"
        tools:text="Description" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/img_fovarite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="14dp"
        android:background="@android:color/transparent"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_star_empty"
        app:layout_constraintBottom_toBottomOf="@+id/txt_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_short_word" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider"
        app:layout_constraintStart_toStartOf="@id/txt_short_word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_desc"
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_height="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>